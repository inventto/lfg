<!DOCTYPE html>
<html>
  <head>
    <title>ControleDePresencaMagnus</title>

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="top">
      <% if user_signed_in? %>
        <strong><div id="login">Usuário:</strong><%= current_user.email %>, <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></div>
      <% end %>
      <div id="logo">
        <img src="/assets/logo.png"/></img>
      </div>
      <div class="menu">
        <ul>
          <li><a href="/alunos">Alunos</a></li>
          <li><a href="/matriculas">Matrículas</a></li>
          <li><a href="/presencas">Presenças</a></li>
          <li><a href="/logradouros">Logradouros</a></li>
          <li><a href="/feriados">Feriados</a></li>
        </ul>
      </div>
    </div>
    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>
